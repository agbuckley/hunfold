name:                hunfold
version:             0.1.0.0
-- synopsis:
-- description:
license:             BSD3
license-file:        LICENSE
author:              Chris Pollard
maintainer:          cspollard@gmail.com
-- copyright:
category:            Data
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10
tested-with: GHC == 8.0.1, GHC == 8.0.2

library
  exposed-modules:     Matrix
                     , MarkovChain
                     , Probability
                     , InMatrix
                     , Model
                     , RunModel
                     , NDSL

  build-depends:       base == 4.9.*
                     , primitive == 0.6.*
                     , transformers == 0.5.*
                     , mwc-random == 0.13.*
                     , mwc-probability == 1.3.*
                     , pipes == 4.3.*
                     , erf == 2.0.*
                     , lens == 4.15.*
                     , matrix == 0.3.*
                     , linear == 1.20.*
                     , vector == 0.11.*
                     , aeson == 1.0.*
                     , text == 1.2.*
                     , free == 4.12.4
                     , containers == 0.5.*
                     , ad == 4.3.*
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall -fwarn-monomorphism-restriction -fwarn-incomplete-record-updates -fwarn-unused-do-bind
  ghc-prof-options:    -Wall -fwarn-monomorphism-restriction -fwarn-incomplete-record-updates -fwarn-unused-do-bind -O0 -fprof-auto -caf-all


executable run-hunfold
  main-is:             Main.hs
  build-depends:       base == 4.9.*
                     , hunfold == 0.1.*
                     , optparse-applicative == 0.13.*
                     , vector == 0.11.*
                     , bytestring == 0.10.*
                     , aeson == 1.0.*
                     , text == 1.2.*
                     , containers == 0.5.*
  hs-source-dirs:      app/
  default-language:    Haskell2010
  ghc-options:         -Wall -fwarn-monomorphism-restriction -fwarn-incomplete-record-updates -fwarn-unused-do-bind
  ghc-prof-options:    -Wall -fwarn-monomorphism-restriction -fwarn-incomplete-record-updates -fwarn-unused-do-bind -fprof-auto -caf-all -rtsopts
